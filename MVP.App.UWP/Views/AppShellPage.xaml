<views:PageBase
    x:Class="MVP.App.Views.AppShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WinUX.MvvmLight.Xaml.Views"
    DataContext="{Binding AppShellPageViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <views:PageBase.Resources>
        <DataTemplate x:Key="NavigationViewHeaderTemplate">
            <Grid />
        </DataTemplate>
    </views:PageBase.Resources>

    <Grid Background="{ThemeResource LightGrayThemeBrush}">
        <NavigationView
            x:Name="AppMenu"
            AlwaysShowHeader="False"
            Content="{x:Bind ViewModel.NavigationService.Frame}"
            IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=TwoWay}"
            IsSettingsVisible="False"
            MenuItemsSource="{x:Bind ViewModel.NavigationItems, Mode=OneWay}"
            OpenPaneLength="240"
            SelectedItem="{x:Bind ViewModel.SelectedNavigationItem, Mode=TwoWay}"
            Style="{StaticResource HeaderlessNavigationViewStyle}" />

