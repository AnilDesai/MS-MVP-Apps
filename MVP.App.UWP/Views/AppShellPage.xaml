            PaneBackground="{StaticResource MvpBlueDarkerThemeBrush}"
            PrimaryButtons="{x:Bind ViewModel.PrimaryMenuButtons}"
            SecondaryButtons="{x:Bind ViewModel.SecondaryMenuButtons}"
            VisualStateNarrowMinWidth="0"
            VisualStateNormalMinWidth="720" />

        <Grid Background="#50000000" Visibility="{x:Bind ViewModel.IsBusyMessageBlocking, Mode=OneWay}" />

